<!DOCTYPE html>
<html>
  <head>
    <title>Plusdollar</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "https://js.stripe.com/v1/" %>
    <%= javascript_tag do %>
      Stripe.setPublishableKey('<%= Rails.configuration.stripe_public %>');
    <% end %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'nav' %>
    <div class="container">
      <%= render 'flashes' %>
      <%= yield %>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
