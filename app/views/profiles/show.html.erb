<%= form_for @user, url: profile_path, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <% if @user.chargable? %>
    <div class="alert alert-success">
      Thanks for providing your payment info! If you'd like to stop all payment on any future pledges you may <%= link_to "remove your payment info", payment_path, method: :delete %>.
    </div>
  <% else %>
    <%= render 'payment_alert' %>
  <% end %>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
